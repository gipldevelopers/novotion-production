// Prisma schema for PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  role          Role      @default(USER)
  status        String    @default("ACTIVE") // ACTIVE, SUSPENDED
  name          String?
  image         String?
  phone         String?
  address       String?
  city          String?
  state         String?
  postalCode    String?
  country       String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  payments      Payment[]
  purchases     Purchase[]
  blogs         Blog[]
}

enum Role {
  USER
  ADMIN
}

model Payment {
  id            String   @id @default(cuid())
  orderId       String   @unique // PayGlocal orderId
  amount        Float
  currency      String   @default("USD")
  status        String   // PENDING, SUCCESS, FAILED
  provider      String   @default("PAYGLOCAL")
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  metadata      Json?    // Store raw response from provider
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  purchases     Purchase[]
}

model Purchase {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  itemId    String   // ID of the service/item
  itemName  String   // Name of the service
  itemPrice Float
  type      String?  // SERVICE, CAREER_PACKAGE, etc.
  status    String   @default("ACTIVE")
  paymentId String?
  payment   Payment? @relation(fields: [paymentId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactMessage {
  id         String   @id @default(cuid())
  fullName   String
  email      String
  phone      String?
  company    String?
  userType   String?
  message    String
  adminNotes String?
  status     String   @default("NEW") // NEW, IN_PROGRESS, RESOLVED
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Blog {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String   @db.Text
  category    String
  subCategory String?
  featured    Boolean  @default(false)
  views       Int      @default(0)
  likes       Int      @default(0)
  comments    Int      @default(0)
  readTime    String?
  tags        String[] @default([])
  authorName  String?
  authorRole  String?
  authorBio   String?  @db.Text
  imageUrl    String?
  createdById String
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TopicSuggestion {
  id         String   @id @default(cuid())
  name       String
  email      String
  topic      String
  message    String?  @db.Text
  status     String   @default("NEW") // NEW, REVIEWED, IMPLEMENTED
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CustomPackage {
  id          String   @id @default(cuid())
  name        String
  price       Float
  description String   @db.Text
  features    String[] @default([])
  color       String   @default("blue") // blue, indigo, etc.
  badge       String?  // Starter, Popular, etc.
  icon        String   @default("Zap") // Icon name from lucide-react
  isSeed      Boolean  @default(false) // true for seed packages, false for admin-created
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
